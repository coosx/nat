<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>
	<logger name="top.coos" level="DEBUG" />
	<root level="ERROR">
		<!-- <appender-ref ref="ROLLING"/> -->
		<appender-ref ref="STDOUT" />
	</root>
</configuration>